{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "btn-lib": [
        "./dist/btn-lib"
      ],
      "button-lib": [
        "./dist/button-lib"
      ],
      "my-lib": [
        "./dist/my-lib"
      ]
    },
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve",
    "lib": ["ES2022", "DOM", "ES2015.Promise"]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "references": [
    {
      "path": "./projects/button-lib/tsconfig.lib.json"
    },
    {
      "path": "./projects/button-lib/tsconfig.spec.json"
    },
    {
      "path": "./projects/btn-lib/tsconfig.lib.json"
    },
    {
      "path": "./projects/btn-lib/tsconfig.spec.json"
    },
    {
      "path": "./projects/my-lib/tsconfig.lib.json"
    },
    {
      "path": "./projects/my-lib/tsconfig.spec.json"
    }
  ]
}
